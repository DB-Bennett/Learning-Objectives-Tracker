    <script>
        const brilliantBlues = {
            primary: '#004AAD',
            secondary: '#0096C7',
            accent: '#48CAE4',
            lightAccent: '#ADE8F4',
            background: '#CAF0F8'
        };

        function processLabel(label) {
            const maxLength = 16;
            if (label.length <= maxLength) {
                return label;
            }
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) {
                lines.push(currentLine.trim());
            }
            return lines;
        }
        
        const tooltipTitleCallback = function(tooltipItems) {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
              return label.join(' ');
            } else {
              return label;
            }
        };

        const objectivesStatusData = {
            labels: ['Completed', 'Ongoing'],
            datasets: [{
                label: 'Objectives Status',
                data: [2, 2],
                backgroundColor: [
                    brilliantBlues.secondary,
                    brilliantBlues.lightAccent
                ],
                borderColor: [
                    brilliantBlues.primary,
                    brilliantBlues.accent
                ],
                borderWidth: 2,
                hoverOffset: 4
            }]
        };

        const objectivesStatusChartCtx = document.getElementById('objectivesStatusChart').getContext('2d');
        new Chart(objectivesStatusChartCtx, {
            type: 'doughnut',
            data: objectivesStatusData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    }
                }
            }
        });

        const achievementTypesData = {
            labels: [
                processLabel('Professional Certificate'), 
                'Certificate', 
                'Degree', 
                'License', 
                'Project'
            ],
            datasets: [{
                label: '# of Achievements',
                data: [1, 1, 1, 1, 1],
                backgroundColor: [
                    brilliantBlues.secondary,
                    brilliantBlues.accent,
                    brilliantBlues.primary,
                    brilliantBlues.lightAccent,
                    brilliantBlues.background
                ],
                borderColor: brilliantBlues.primary,
                borderWidth: 1,
                borderRadius: 5
            }]
        };

        const achievementTypesChartCtx = document.getElementById('achievementTypesChart').getContext('2d');
        new Chart(achievementTypesChartCtx, {
            type: 'bar',
            data: achievementTypesData,
            options: {
                indexAxis: 'y',
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                         ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    }
                }
            }
        });
    </script>
